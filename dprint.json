{
  "incremental": true,
  "lineWidth": 100,
  "indentWidth": 2,
  "typescript": {
    "semiColons": "asi",
    "quoteStyle": "preferSingle",
    "useBraces": "always",
    "trailingCommas": "never",
    "arrowFunction.useParentheses": "preferNone"
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,json,md}"
  ],
  "excludes": [
    "**/node_modules",
    "**/.cache",
    "**/dist"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.62.2.wasm",
    "https://plugins.dprint.dev/json-0.14.1.wasm"
  ]
}
