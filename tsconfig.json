{
	"compileOnSave": false,
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"jsx": "preserve",
		"jsxFactory": "preact.h",
		"jsxFragmentFactory": "preact.Fragment",
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"moduleResolution": "node",
		"target": "esnext",
		"module": "esnext",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true
	},
	"include": ["node_modules/wmr/types.d.ts", "**/*"],
	"typeAcquisition": {
		"enable": true
	}
}
